<GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    	xmlns:tools="http://schemas.android.com/tools"
    	tools:context=".MainActivity" 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#beffff"
        android:rowCount="4"
        android:columnCount="2">
    <TextView
        android:id="@+id/textArea"
        android:layout_gravity="fill_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        />
    <Button
        android:id="@+id/scheduleButton"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showEvent"
        android:text="@string/scheduleButtonText" />

    <Button
        android:id="@+id/mapButton"
        android:layout_width="168dp"
         android:layout_row="2"
        android:layout_column="1"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:onClick="showEvent"
        android:text="@string/mapButtonText" />

    <Button
        android:id="@+id/contactInfoButton"
		 android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showEvent"
        android:text="@string/contactInfoButtonText" />

    <Button
        android:id="@+id/publicChatButton"
         android:layout_row="3"
        android:layout_column="1"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:onClick="showEvent"
        android:text="@string/publicChatButtonText" />
   
</GridLayout>